{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}
{% block body %}
    <main class="fr-container--fluid">
        <section class="fr-container fr-p-5w">
            <div class="fr-grid-row">
                <div class="fr-col-12 fr-text--center">
                    <figure>
                        <img src="{{ asset('img/Logohistologe.png') }}" alt="Logo HISTOLOGE">
                    </figure>
                    <figure class="fr-my-5w">
                        <figcaption>
                            <h1>{{ title }}</h1>
                        </figcaption>
                        <img src="{{ asset('img/'~icon~'.svg') }}" alt="Erreur {{ code }}">
                        <figcaption>
                            <h1>{{ message }}</h1>
                        </figcaption>
                    </figure>
                </div>
            </div>
        </section>
    </main>
{% endblock %}