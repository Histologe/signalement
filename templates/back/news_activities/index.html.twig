{% extends 'back/base_bo.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <section class="fr-grid-row fr-grid-row--middle fr-p-5v ">
        <div class="fr-col-6">
            <h1 class="fr-h2 fr-mb-0">Affectation(s) en attente</h1>
        </div>
    </section>
    <section class="fr-col-12 fr-table fr-table--bordered fr-pt-0">
        <table class="fr-display-inline-table">
            <thead>
            <tr>
                <th>Signalement</th>
                <th>Date</th>
                <td>Desc.</td>
                <th>Par</th>
                <th class="fr-text--right">actions</th>
            </tr>
            </thead>
            <tbody>
            {% for affectation in affectations %}
                <tr class="partenaire-row">
                    <td>{{ affectation.signalement.reference }}</td>
                    <td>{{ affectation.createdAt|date('d/m/Y à H:i') }}</td>
                    <td>Vous avez été affecté</td>
                    <td>{{ affectation.affectedBy.nomComplet }}</td>
                    <td class="fr-text--right"><a href="{{ path('back_signalement_view',{uuid:affectation.signalement.uuid}) }}" class="fr-btn fr-fi-eye-fill"></a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>

    <section class="fr-grid-row fr-grid-row--middle fr-p-5v ">
        <div class="fr-col-6">
            <h1 class="fr-h2 fr-mb-0">Nouveau(x) suivi(s)</h1>
        </div>
        <div class="fr-col-6 fr-text--right">
            <form action="{{ path('back_news_activities') }}" method="POST">
                <button class="fr-btn fr-btn--icon-left fr-fi-check-line" href="#">Marquer tous comme lus</button>
                <input type="hidden" name="_token" value="{{ csrf_token('clear_news_'~app.user.id) }}">
            </form>
        </div>
    </section>
    <section class="fr-col-12 fr-table fr-table--bordered fr-pt-0">
        <table class="fr-display-inline-table">
            <thead>
            <tr>
                <th>Signalement</th>
                <th>Date</th>
                <td>Desc.</td>
                <th>Par</th>
                <th class="fr-text--right">actions</th>
            </tr>
            </thead>

            <tbody>
            {% for suivi in suivis %}
                <tr class="partenaire-row">
                    <td>{{ suivi.signalement.reference }}</td>
                    <td>{{ suivi.createdAt|date('d/m/Y à H:i') }}</td>
                    <td>{{ suivi.description|raw }}</td>
                    <td>{{ suivi.createdBy.nomComplet }}</td>
                    <td class="fr-text--right"><a href="{{ path('back_signalement_view',{uuid:suivi.signalement.uuid}) }}#suivis" class="fr-btn fr-fi-eye-fill"></a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="fr-text--center">Aucun suivi non lu</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
