{% extends 'back/base_bo.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <section class="fr-grid-row fr-grid-row--middle fr-p-5v ">
        <div class="fr-col-6">
            <h1 class="fr-h2 fr-mb-0">Notification(s)</h1>
        </div>
    </section>
    <section class="fr-col-12 fr-table fr-table--bordered fr-pt-0">
        <table class="fr-display-inline-table">
            <thead>
            <tr>
                <th>Signalement</th>
                <th>Date</th>
                <td>Desc.</td>
                <th>Par</th>
                <th class="fr-text--right">actions</th>
            </tr>
            </thead>
            <tbody>
            <tr style="background: white!important">
                <td colspan="5" class="fr-text--bold">{{ signalements|length}} Nouveau(x) signalement(s)</td>
            </tr>
            {% for notification in signalements %}
                <tr class="partenaire-row">
                    <td>{{ notification.signalement.reference }}</td>
                    <td>{{ notification.createdAt|date('d/m/Y à H:i') }}</td>
                    <td>Un nouveau signalement vou attend</td>
                    <td>{{ notification.signalement.nomOccupant|upper~' '~notification.signalement.prenomOccupant|capitalize }}</td>
                    <td class="fr-text--right"><a href="{{ path('back_signalement_view',{uuid:notification.signalement.uuid}) }}" class="fr-btn {{ notification.isSeen ? 'fr-fi-check-line fr-btn--success':'fr-fi-eye-fill' }}"></a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="fr-text--center">Aucun signalement en attente</td>
                </tr>
            {% endfor %}
            <tr style="background: white!important">
                <td colspan="5" class="fr-text--bold">{{ affectations|length }} Nouvelle(s) affectation(s)</td>
            </tr>
            {% for notification in affectations %}
                <tr class="partenaire-row">
                    <td>{{ notification.affectation.signalement.reference }}</td>
                    <td>{{ notification.affectation.createdAt|date('d/m/Y à H:i') }}</td>
                    <td>Vous avez été affecté</td>
                    <td>{{ notification.affectation.affectedBy.nomComplet }}</td>
                    <td class="fr-text--right"><a href="{{ path('back_signalement_view',{uuid:notification.affectation.signalement.uuid}) }}" class="fr-btn {{ notification.isSeen ? 'fr-fi-check-line fr-btn--success':'fr-fi-eye-fill' }}"></a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="fr-text--center">Aucune affectation en attente</td>
                </tr>
            {% endfor %}
            <tr style="background: white!important">
                <td colspan="5" class="fr-text--bold">{{ suivis|length }} Nouveau(x) suivi(s)</td>
            </tr>
            {% for notification in suivis %}
                <tr class="partenaire-row">
                    <td>{{ notification.suivi.signalement.reference }}</td>
                    <td>{{ notification.suivi.createdAt|date('d/m/Y à H:i') }}</td>
                    <td>{{ notification.suivi.description|raw }}</td>
                    <td>{{ notification.suivi.createdBy.nomComplet }}</td>
                    <td class="fr-text--right"><a href="{{ path('back_signalement_view',{uuid:notification.suivi.signalement.uuid}) }}#suivis" class="fr-btn {{ notification.isSeen ? 'fr-fi-check-line fr-btn--success':'fr-fi-eye-fill' }}"></a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="fr-text--center">Aucun suivi non lu</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
