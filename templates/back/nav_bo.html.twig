                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="fr-sidemenu__item {% if 'back_partenaire' in app.request.get('_route') %}fr-sidemenu__item--active{% endif %}">
                        <a class="fr-sidemenu__link" href="{{ path('back_partenaire_index') }}" target="_self" {% if 'back_partenaire' in app.request.get('_route') %}aria-current="page"{% endif %}>Partenaires</a>
                    </li>
                    <li class="fr-sidemenu__item {% if 'back_user_report' in app.request.get('_route') %}fr-sidemenu__item--active{% endif %}">
                        <a class="fr-sidemenu__link" href="{{ path('back_user_report_index') }}" target="_self" {% if 'back_user_report' in app.request.get('_route') %}aria-current="page"{% endif %}>Bugs & Retours</a>
